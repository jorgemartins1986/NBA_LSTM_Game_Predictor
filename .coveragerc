[run]
source = src
omit = 
    src/__pycache__/*
    tests/*
    */__init__.py
    # Legacy script files (kept for backward compatibility)
    src/update_prediction_results.py
    src/nba_predictor.py
    # GPU utilities - hardware-dependent, hard to unit test
    src/utils.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if __name__ == .__main__.:
    pass
    except ImportError
    # Exclude main blocks
    if __name__
show_missing = true
skip_covered = false
# Refactored code coverage target 
# Core modules (training/, prediction/) are now fully unit-testable
fail_under = 80

[html]
directory = reports/coverage_html
